<h1> Welcome to the BigAnimal Game Lobby!</h1>

<p class="directions"> Take a look at our deck selection, and pick one that tickles your fancy. </p>

<% @decks.each do |deck| %>

  <div class="card-deck">
      <div class="inner-border">
        <div class="card-content">
          <h3><%= deck.name %></h3>
          <a class="btn btn-play btn-lg" href ="/decks/<%= deck.id %>" role="button"> Play! </a>

          <a class="btn btn-edit" href ="/decks/<%= deck.id%>/edit" role="button"> Edit Deck </a>
          <form method="post" action="/decks/<%= deck.id %>">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="delete" class="btn btn-edit">
          </form>
        </div>
      </div>
  </div>
<%end%>
<% if session[:user_id]%>
  <div class="card-deck">
    <div class="inner-border">
        <div class="card-content">
            <h2> Don't like the ones that you see here?</h2>
            <a class="btn btn-primary" href="/decks/new" role="button">Make my own deck! </a>
       </div>
    </div>
  </div>
<% else %>
  <div class="card-deck">
    <div class="inner-border">
        <div class="card-content">
            <h3>Would you like to make a new deck?</h3>
              <p class="directions"> Please
              <a href="/signin">
                <button type="button" class="btn btn-xs btn-info">Sign In</button>
              </a>
              or
              <a href="/signup">
                <button type="button" class="btn btn-xs btn-info">Register</button>
              </a>
              to create a new deck!</p>
       </div>
    </div>
  </div>
<% end %>

